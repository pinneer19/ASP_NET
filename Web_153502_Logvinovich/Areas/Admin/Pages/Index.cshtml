<h1>Index</h1>
@{
    
}
<p>
    <a class="btn btn-primary" asp-page="/Create"><i class="bi bi-plus-lg"></i>Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Book.Items[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Book.Items[0].Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Book.Items[0].Image)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Book.Items[0].Price)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Book.Items)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                <img src="@item.Image">
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td class="d-flex">
                
                <a class="btn btn-success" asp-page="./Edit" asp-route-id="@item.Id"><i class="bi bi-pencil"></i>Edit</a>
                <a class="mx-2 btn btn-info" asp-page="./Details" asp-route-id="@item.Id"><i class="bi bi-info-lg"></i>Details</a>
                <a class="btn btn-danger" asp-page="./Delete" asp-route-id="@item.Id"><i class="bi bi-trash"></i>Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

<Pager current-page="@Model.Book.CurrentPage" total-pages="@Model.Book.TotalPages" admin="true"></Pager>

